<% content_for :head do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Rachel Jane Buckett",
  "jobTitle": "Legal Assistant",
  "worksFor": {
    "@type": "LegalService",
    "name": "Roper Lawyers",
    "url": "https://www.roperlawyers.com"
  },
  "url": "https://www.roperlawyers.com/team/rachel-jane-buckett",
  "image": "<%= asset_url('team/rachel-jane-buckett.jpg') %>",
  "sameAs": [
    "https://www.linkedin.com/in/RACHEL-LINK"
  ]
}
</script>
<% end %>

<main>
  <%= render_manual_breadcrumb([
    { name: "Home", url: "/" },
    { name: "Team", url: "/team" },
    { name: "Rachel Jane Buckett", url: nil }
  ]) %>

  <!-- Profile Hero Section -->
  <section class="py-5">
    <div class="container">
      <div class="row align-items-center g-5">
        <!-- Image Column -->
        <div class="col-lg-5">
          <div class="text-center">
            <div class="mx-auto" style="width: 100%; max-width: 400px;">
              <% begin %>
                <%= image_tag 'team/rachel-jane-buckett.jpg', 
                      alt: 'Rachel Jane Buckett - Legal Assistant at Roper Lawyers',
                      class: 'img-fluid rounded-4',
                      style: 'width: 100%; height: auto; box-shadow: 0 20px 40px rgba(0,0,0,0.15); object-fit: cover;' %>
              <% rescue %>
                <!-- Temporary placeholder until photo is added -->
                <div class="bg-light rounded-4 d-flex align-items-center justify-content-center mx-auto" 
                     style="width: 100%; max-width: 400px; aspect-ratio: 1; box-shadow: 0 20px 40px rgba(0,0,0,0.15);">
                  <div class="text-center">
                    <div class="mb-4" style="font-size: 4rem; color: #b39c84; font-weight: 600;">
                      RB
                    </div>
                    <p class="text-muted h6 mb-0">Professional photo coming soon</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Content Column -->
        <div class="col-lg-7">
          <!-- Main Headline -->
          <h1 class="mb-4" style="font-size: 2.5rem; font-weight: 700; line-height: 1.1; color: #1a1a1a; letter-spacing: 0.5px;">
            Rachel Buckett – Legal Assistant
          </h1>
          
          <!-- Credentials -->
          <div class="mb-4">
            <p class="h5 mb-3" style="color: #b39c84; font-weight: 600;">
              <strong>Legal Assistant – Roper Lawyers</strong>
            </p>
          </div>
          
          <!-- Main Description -->
          <div class="mb-4" style="font-size: 1.125rem; line-height: 1.6; color: #212529;">
            <p class="mb-4">
              For more than <strong>17 years</strong>, Rachel has lived in Spain and supported clients through their property transactions with care and clarity.
            </p>
            <p class="mb-4">
              She is often the first point of contact for clients—managing documents, providing updates, and coordinating with notaries, registries, and local authorities.
            </p>
            <p class="mb-4">
              Her deep understanding of both the <strong>Spanish system</strong> and the needs of international clients makes her an essential part of the team.
            </p>
          </div>
          
          <!-- CTA -->
          <div class="mb-4">
            <h4 class="mb-3" style="color: #1a1a1a; font-weight: 600;">
              Contact Rachel and the Roper Lawyers team
            </h4>
            <div class="d-flex flex-column flex-sm-row gap-3">
              <a href="/free-consultation" class="btn rounded-pill" 
                 style="background-color: #b39c84; border-color: #b39c84; color: white; padding: 0.75rem 1.5rem; font-size: 1.125rem; text-decoration: none; transition: background-color 0.2s ease;">
                Book Free Consultation
              </a>
              <a href="#" data-bs-toggle="modal" data-bs-target="#contactModal" 
                 class="btn rounded-pill btn-outline-secondary" 
                 style="color: #b39c84; border-color: #b39c84; padding: 0.75rem 1.5rem; font-size: 1.125rem; text-decoration: none;">
                Contact Our Team
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Role & Responsibilities Section -->
  <section class="bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h3 class="text-center mb-5" style="color: #1a1a1a; font-weight: 600;">
            Rachel's Role & Responsibilities
          </h3>
          <div class="row g-4">
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">Client Communication</h5>
                  <p class="card-text">First point of contact for clients, providing clear updates and guidance throughout the legal process.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">Document Management</h5>
                  <p class="card-text">Expert handling of legal documentation, ensuring all paperwork is properly prepared and processed.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">Local Coordination</h5>
                  <p class="card-text">Liaising with notaries, registries, and local authorities to ensure smooth transaction completion.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">International Support</h5>
                  <p class="card-text">Bridging the gap between Spanish legal systems and international client needs with 17+ years experience.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Highlight Section -->
  <section class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <div class="p-5 rounded-4" style="background-color: rgba(179, 156, 132, 0.08); border: 1px solid rgba(179, 156, 132, 0.2);">
            <h4 class="mb-3" style="color: #b39c84; font-weight: 600;">
              17+ Years Living in Spain
            </h4>
            <p class="mb-0" style="font-size: 1.1rem; color: #333; line-height: 1.6;">
              Rachel's extensive experience living in Spain gives her unique insight into both the Spanish legal system and the specific challenges faced by international clients. This dual perspective makes her an invaluable member of the Roper Lawyers team.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to Team Section -->
  <section class="py-4">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <a href="/team" class="btn btn-link" style="color: #b39c84; text-decoration: none; font-size: 1.1rem;">
            ← Back to Team Overview
          </a>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
/* Profile page specific styles */
.breadcrumb {
  background: none;
  padding: 0;
  margin-bottom: 0;
}

.breadcrumb-item + .breadcrumb-item::before {
  content: ">";
  color: #6c757d;
}

/* Card hover effects */
.card {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}


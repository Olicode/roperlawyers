        </div>
      </div>

      <!-- Text Column (make it a flex container to center content vertically) -->
      <div class="col-lg-6 d-flex align-items-center">
        <div>
          <a class="reviews-link" href="#reviews">
            <strong>Google Reviews</strong>
            <span class="stars">5.0</span>
            <i class="fa-sharp fa-solid fa-star stars"></i>
            <i class="fa-sharp fa-solid fa-star stars"></i>
            <i class="fa-sharp fa-solid fa-star stars"></i>
            <i class="fa-sharp fa-solid fa-star stars"></i>
            <i class="fa-sharp fa-solid fa-star stars"></i>
          </a>
          <h1 class="display-4 fw-bold lh-1 my-3">
            <span class="gradient-text">Tenerife Property</span> Lawyers & Conveyancing Experts
          </h1>
          <p class="value-proposition">
            Providing expert, transparent legal guidance for a seamless property journey in Tenerife – backed by over 14 years of proven experience.
          </p>
          <div class="d-grid gap-2 d-md-flex mt-3 justify-content-md-start">
            <div class="d-grid gap-2">
              <%= link_to '/free-consultation', class: "btn btn-outline-secondary btn-lg px-4 p-2 button-gold" do %>
                <%= image_tag("Olivier-Roper-Solicitor-Roper-Lawyers-head.jpg", 
                    alt: "Olivier Roper", 
                    class: "olivier-head") %>
                <p class="mb-0">Book a Free Consultation<br>with Olivier Roper</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>  


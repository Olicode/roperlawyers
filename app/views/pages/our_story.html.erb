  <!-- Why Clients Choose Roper Lawyers -->
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <h2 class="h3 mb-4">Why Clients Choose Roper Lawyers</h2>
          

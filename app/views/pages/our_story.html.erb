                </div>
              </div>
            </div>
          </div>
          
          <!-- Additional Services Row -->
          <div class="row g-4 mt-3">
            <!-- Holiday Rental Licences -->
            <div class="col-lg-4 col-md-6">
              <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                  <div class="mb-3">

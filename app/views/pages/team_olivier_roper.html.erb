<% content_for :head do %>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Olivier Roper",
  "jobTitle": "Founder & Lawyer",
  "alumniOf": { "@type": "CollegeOrUniversity", "name": "University of Barcelona" },
  "worksFor": {
    "@type": "LegalService",
    "name": "Roper Lawyers",
    "url": "https://www.roperlawyers.com"
  },
  "url": "https://www.roperlawyers.com/team/olivier-roper",
  "image": "https://www.roperlawyers.com/team/olivier-roper.jpg",
  "sameAs": [
    "https://www.linkedin.com/in/OLIVIER-LINK"
  ]
}
</script>
<% end %>

<main>
  <%= render_manual_breadcrumb([
    { name: "Home", url: "/" },
    { name: "Team", url: "/team" },
    { name: "Olivier Roper", url: nil }
  ]) %>

  <!-- Profile Hero Section -->
  <section class="py-5">
    <div class="container">
      <div class="row align-items-center g-5">
        <!-- Image Column -->
        <div class="col-lg-5">
          <div class="text-center">
            <%= image_tag("Olivier-Roper-Solicitor-Roper-Lawyers.jpg", 
                alt: "Olivier Roper - Founder & Spanish Property Lawyer", 
                class: "img-fluid rounded-4",
                style: "max-width: 90%; height: auto; object-fit: cover; box-shadow: 0 20px 40px rgba(0,0,0,0.15);") %>
          </div>
        </div>
        
        <!-- Content Column -->
        <div class="col-lg-7">
          <!-- Main Headline -->
          <h1 class="mb-4" style="font-size: 2.5rem; font-weight: 700; line-height: 1.1; color: #1a1a1a; letter-spacing: 0.5px;">
            Olivier Roper – Founder & Lawyer
          </h1>
          
          <!-- Credentials -->
          <div class="mb-4">
            <p class="h5 mb-2" style="color: #b39c84; font-weight: 600;">
              <strong>Founder of Roper Lawyers</strong>
            </p>
            <p class="h6 text-muted" style="font-style: italic;">
              <strong>Law Degree, University of Barcelona</strong>
            </p>
          </div>
          
          <!-- Main Description -->
          <div class="mb-4" style="font-size: 1.125rem; line-height: 1.6; color: #212529;">
            <p class="mb-4">
              For more than 17 years, Olivier has guided international clients through the complexities of Spanish property law. His work spans <strong>conveyancing, inheritance, succession, and real estate compliance</strong>, always with one mission: to make every client feel safe and protected in their investment.
            </p>
            <p class="mb-4">
              Olivier combines Spanish legal expertise with a practical, client-focused approach. Whether you're buying your first holiday home, selling an investment, or dealing with inheritance matters, he ensures the process is clear and risk-free.
            </p>
          </div>
          
          <!-- Quote -->
          <blockquote class="mb-5 p-4 rounded-3" style="background-color: rgba(179, 156, 132, 0.08); border-left: 4px solid #b39c84;">
            <p class="mb-0" style="font-style: italic; font-size: 1.2rem; color: #333; font-weight: 500;">
              "My mission is simple: no surprises, only solutions."
            </p>
            <footer class="mt-2" style="font-style: normal; color: #6c757d;">
              — Olivier Roper
            </footer>
          </blockquote>
          
          <!-- CTA -->
          <div class="mb-4">
            <h4 class="mb-3" style="color: #1a1a1a; font-weight: 600;">
              Contact Olivier and the Roper Lawyers team
            </h4>
            <div class="d-flex flex-column flex-sm-row gap-3">
              <a href="/free-consultation" class="btn rounded-pill" 
                 style="background-color: #b39c84; border-color: #b39c84; color: white; padding: 0.75rem 1.5rem; font-size: 1.125rem; text-decoration: none; transition: background-color 0.2s ease;">
                Book Free Consultation with Olivier
              </a>
              <a href="#" data-bs-toggle="modal" data-bs-target="#contactModal" 
                 class="btn rounded-pill btn-outline-secondary" 
                 style="color: #b39c84; border-color: #b39c84; padding: 0.75rem 1.5rem; font-size: 1.125rem; text-decoration: none;">
                Contact Our Team
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Expertise Section -->
  <section class="bg-light py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h3 class="text-center mb-5" style="color: #1a1a1a; font-weight: 600;">
            Olivier's Areas of Expertise
          </h3>
          <div class="row g-4">
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">Property Conveyancing</h5>
                  <p class="card-text">Expert guidance through Spanish property purchases and sales, ensuring secure transactions for international clients.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">Inheritance & Succession</h5>
                  <p class="card-text">Comprehensive support for Spanish inheritance law, wills, and succession planning for international families.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">Real Estate Compliance</h5>
                  <p class="card-text">Ensuring all property transactions meet Spanish legal requirements and regulatory standards.</p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card border-0 h-100" style="background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                <div class="card-body p-4">
                  <h5 class="card-title" style="color: #b39c84;">International Client Support</h5>
                  <p class="card-text">Bilingual legal services designed specifically for UK, Irish, and international property investors.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to Team Section -->
  <section class="py-4">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <a href="/team" class="btn btn-link" style="color: #b39c84; text-decoration: none; font-size: 1.1rem;">
            ← Back to Team Overview
          </a>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
/* Profile page specific styles */
.breadcrumb {
  background: none;
  padding: 0;
  margin-bottom: 0;
}

.breadcrumb-item + .breadcrumb-item::before {
  content: ">";
  color: #6c757d;
}

/* Card hover effects */
.card {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.card:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}

/* Button hover effects */
.btn {
  transition: all 0.2s ease;
}

.btn:hover {
  background-color: #9d8670 !important;
  border-color: #9d8670 !important;
}

/* Quote styling */
blockquote {
  border-radius: 8px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  h1 {
    font-size: 2rem !important;
  }
  
  .h5 {
    font-size: 1.2rem !important;
  }
  
  blockquote p {
    font-size: 1.1rem !important;
  }
}
</style>

<div class="row justify-content-center">
  <div class="col-10 col-md-10 col-lg-3">
    <div class="text-center mt-5 mb-3">
      <h3>Welcome to Roper Lawyers</h3>
      <h5>Property conveyancing solicitors</h5>
      <p>Create an account or <%= link_to "Login", new_user_session_path, :"data-turbolinks" => false %></p>
        
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <h6><%= pluralize(resource.errors.count, "error") %> prohibited this registration from being saved:</h6>
            <ul class="mb-0">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false }}) do |f| %>
          
          <div class="form-inputs">

            <div class="form-floating mb-3">
              <%= f.email_field :email, class: "form-control #{'is-invalid' if resource.errors[:email].any?}",
                          required: true,
                          autofocus: true,
                          autocomplete: "email" %>
              <%= f.label :email, "Email" %>
              
              <% if resource.errors[:email].any? %>
                <div class="invalid-feedback d-block">
                  <%= resource.errors[:email].join(", ") %>
                </div>
              <% end %>
            </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control #{'is-invalid' if resource.errors[:password].any?}",
                        required: true,
                        autocomplete: "new-password" %>
            <%= f.label :password, "Password" %>
            
            <% if resource.errors[:password].any? %>
              <div class="invalid-feedback d-block">
                <%= resource.errors[:password].join(", ") %>
              </div>
            <% end %>
            <div class="form-text">
              <% if @minimum_password_length %>
                <%= @minimum_password_length %> characters minimum
              <% end %>
            </div>
          </div>

        <div class="form-floating mb-3">
            <%= f.password_field :password_confirmation, class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}",
                        required: true,
                        autocomplete: "new-password" %>
            <%= f.label :password_confirmation, "Password confirmation" %>
            
            <% if resource.errors[:password_confirmation].any? %>
              <div class="invalid-feedback d-block">
                <%= resource.errors[:password_confirmation].join(", ") %>
              </div>
            <% end %>
          </div>

          <div class="form-actions d-grid gap-2 mb-3 form-group">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
        <div class="mb-5">
        Have any questions? <a href="https://wa.me/+34649948377">Send me a WhatsApp</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


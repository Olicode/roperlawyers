<div class="row justify-content-center">
<div class="col-10 col-md-10 col-lg-3">
<div class="text-center mt-5 mb-3">
<h3>Welcome back</h3>
<p>Log in or <%= link_to "Create account", new_user_registration_path%></p>
<img src="" alt="" class="">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-floating mb-3">
      <%= f.input_field :email, class: "form-control",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
   <%= f.label :email do %>
     Email
   <% end %>
   </div>
   <div class="form-floating mb-3">
      <%= f.input_field :password, class: "form-control",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    <%= f.label :password do %>
     Password
   <% end %>
   </div>

     <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


    <div class="form-actions d-grid gap-2 form-group mt-3">
      <%= f.button :submit, "Log in", class: "btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end %>
</div>


    </div>
    </div>
    </div>

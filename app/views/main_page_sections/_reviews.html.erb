<section id="reviews" class="bg-light">
<div class="container px-4 py-5 ">
  <div class="">
    <h2 class="pb-4 m-3 text-center">We pride ourselves in providing the best service</h2>
  </div>
  <div class="row px-4 ">
    <% @reviews["records"].each do |review|%>
      <div class="col-sm-3 px-2 py-2 d-flex align-items-stretch ">
        <div class="card p-2 card-shadow">
          <div class="card-body review-data text-start">
          <div class="review-header">
            <h5 class="card-title"><%= review["name"] %></h5>
            <p class="review-rating">
                <% review["rating"].to_i.times do %>
                  <i class="fa fa-star"></i>
                <% end %>
              </p>
             <%# <h6 class="review-date"><%= review["Date"] %>
              </div>
            <p>
              <div class="comment-box" data-controller="review">
  <% if review["comment"].length > 180 %>
    <span data-review-target="comment" data-full="<%= h review["comment"] %>" data-truncated="<%= h truncate(review["comment"], length: 180) %>">
      <%= truncate(review["comment"], length: 180) %>
    </span><br />
    <a href="#" data-review-target="moreLink" data-action="review#showFull" class="review-text">More</a>
    <a href="#" data-review-target="lessLink" data-action="review#showTruncated" class="review-text d-none">Less</a>
  <% else %>
    <%= review["comment"] %>
  <% end %>
</div>
            </p>
          </div>
        </div>
      </div>
      <% end%>

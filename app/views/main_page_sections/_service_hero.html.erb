<!-- Service Hero Section -->
<section class="hero-section" style="min-height: 60vh; display: flex; align-items: center; padding: 3rem 0; margin-top: 0; background: white;">
  <div class="container">
    <div class="row align-items-center g-5">
      <!-- Content Column -->
      <div class="col-lg-8">
        <!-- Google Reviews -->
        <div class="mb-4">
          <a class="reviews-link d-inline-flex align-items-center text-decoration-none" href="https://www.google.com/maps/place/Roper+Lawyers/@28.9208706,-13.6682914,17z/data=!4m8!3m7!1s0xc4625151db852d7:0x4e4d25ec171214f4!8m2!3d28.9208706!4d-13.6657165!9m1!1b1!16s%2Fg%2F11hdxxw7zb?entry=ttu&g_ep=EgoyMDI1MDkxMC4wIKXMDSoASAFQAw%3D%3D" target="_blank" rel="noopener noreferrer">
            <!-- Google Logo -->
            <svg width="16" height="16" viewBox="0 0 24 24" class="me-2">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <strong class="me-2" style="font-size: 1rem; color: #333; font-family: 'Product Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;">Google</strong>
            <span class="stars me-2" style="font-size: 1rem; color: #5F6368;">5.0</span>
            <!-- Google-style stars -->
            <div class="stars d-flex">
              <span style="color: #FBBC04; font-size: 1rem;">★</span>
              <span style="color: #FBBC04; font-size: 1rem;">★</span>
              <span style="color: #FBBC04; font-size: 1rem;">★</span>
              <span style="color: #FBBC04; font-size: 1rem;">★</span>
              <span style="color: #FBBC04; font-size: 1rem;">★</span>
            </div>
            <span style="color: #5F6368; font-size: 0.9rem; margin-left: 0.5rem;">(150+)</span>
          </a>
        </div>

        <!-- Scarcity Message -->
        <div class="mb-4">
          <div class="d-inline-flex align-items-center px-3 py-2 rounded-pill" 
               style="background-color: rgba(179, 156, 132, 0.08); border: 1px solid rgba(179, 156, 132, 0.2);">
            <span style="color: #b39c84; font-weight: 500; font-size: 0.85rem;">
              Expert legal services in <%= locals[:location_display] || 'Lanzarote' %> this <%= Date.current.strftime("%B") %>.
            </span>
            <a href="#" class="text-decoration-none d-inline-flex align-items-center secondary-link ms-2" 
               data-bs-toggle="modal" data-bs-target="#contactModal"
               style="color: #212529; font-weight: 500; font-size: 0.85rem; transition: all 0.2s ease;">
              <span class="link-text">Contact us</span> <span class="arrow ms-1">→</span>
            </a>
          </div>
        </div>

        <!-- Main Headline -->
        <h1 class="hero-headline mb-4" style="font-size: 2.4rem; font-weight: 700; line-height: 1.1; color: #1a1a1a; letter-spacing: 0.5px;">
          <%= locals[:headline] || "Expert Legal Services in #{locals[:location_display] || 'Lanzarote'}" %>
        </h1>

        <!-- Subheadline -->
        <p class="hero-subtext mb-5" style="font-size: 1.125rem; color: #212529; line-height: 1.5; max-width: 95%;">
          <%= locals[:subheadline] || "14+ years helping UK, Irish & international clients with comprehensive legal services. Our bilingual English-Spanish legal team ensures smooth and professional legal support." %>
        </p>

        <!-- CTA Buttons -->
        <div class="d-flex flex-column flex-sm-row gap-3 mb-3 align-items-start">
          <!-- Primary CTA Column -->
          <div class="d-flex flex-column align-items-start">
            <button class="btn rounded-pill d-flex align-items-center justify-content-center hero-primary-btn" 
                    style="background-color: #b39c84; border: none; color: white; padding: 0.75rem 1.5rem; font-size: 1.125rem; width: fit-content; min-height: 48px; transition: background-color 0.2s ease;"
                    data-bs-toggle="modal" data-bs-target="#contactModal">
              <span style="font-size: 1.125rem; font-weight: 500; letter-spacing: 0.8px;">Get In Touch</span>
            </button>
            
            <!-- Button Subtext -->
            <div class="mt-2 d-flex align-items-center justify-content-center" style="font-size: 0.85rem; color: #6c757d; width: 100%;">
              <%= image_tag("Olivier-Roper-Solicitor-Roper-Lawyers-head.jpg", 
                  alt: "Olivier Roper", 
                  class: "rounded-circle me-2",
                  style: "width: 24px; height: 24px; object-fit: cover;") %>
              Speak directly to Olivier Roper
            </div>
          </div>
          
         <!-- Secondary CTA -->
         <a href="/why-choose-us" class="btn rounded-pill d-flex align-items-center justify-content-center text-decoration-none hero-secondary-btn" 
            style="color: #000000; background-color: #f8f9fa; border: none; font-weight: 400; font-size: 1.125rem; padding: 0.75rem 1.5rem; min-height: 48px; width: fit-content; transition: background-color 0.2s ease;">
           <span style="font-size: 1.125rem; font-weight: 400;">See Why Expats Trust Us</span>
         </a>
        </div>
      </div>

      <!-- Image Column -->
      <div class="col-lg-4">
        <div class="text-center">
          <%= image_tag("Olivier-Roper-Solicitor-Roper-Lawyers.jpg", 
              alt: "Olivier Roper - Expert Property Lawyer", 
              class: "img-fluid rounded-4",
              style: "max-width: 100%; height: auto; object-fit: cover; box-shadow: 0 20px 40px rgba(0,0,0,0.1);") %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Testimonial Section -->
<section class="pb-5 pt-3" style="background: white;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <blockquote class="mb-0" style="font-style: italic; color: #6c757d; font-size: 1.25rem; line-height: 1.6;">
          "They went above and beyond to support us and look after our best interests"
          <footer class="mt-3" style="font-style: normal; font-weight: 500; color: #333; font-size: 1rem;">
            — Guy Fitzpatrick
          </footer>
        </blockquote>
      </div>
    </div>
  </div>
</section>

<style>
/* Hero Section Styles */
.hero-section {
  background: white;
  margin-top: 0 !important;
  border-top: none;
}

/* Remove any default margins from main elements */
main {
  margin-top: 0 !important;
  padding-top: 0 !important;
}

.reviews-link {
  color: #333;
  transition: all 0.2s ease;
}

.reviews-link:hover {
  color: #b29c84;
}

/* Hero text styling */
.hero-headline {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.hero-subtext {
  font-weight: 400;
}

/* Hero button hover effects */
.hero-primary-btn:hover {
  background-color: #9d8670 !important;
}

.hero-secondary-btn:hover {
  background-color: #e9ecef !important;
}

/* Secondary link hover effects */
.secondary-link:hover .link-text {
  text-decoration: underline !important;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .hero-section {
    min-height: 50vh;
    padding: 2rem 0;
  }
  
  .hero-headline {
    font-size: 2rem !important;
  }
  
  .hero-subtext {
    font-size: 1rem !important;
  }
}
</style>

<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-6">

    <h1 class="mt-5 text-center">Your submited information</h1>

    <div class="container card p-5 mb-3 card-shadow">
 <h4 class="mb-3">Personal details</h4>

    <p>
      <strong>First name:</strong>
      <%= @user.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @user.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Mobile:</strong>
      <%= @user.mobile_phone %>
    </p>

    <p>
      <strong>Full name on passport:</strong>
      <%= @user.full_name_on_passport %>
    </p>

    <p>
      <strong>Passport number:</strong>
      <%= @user.passport_number %>
    </p>

    <p>
      <strong>Date of Birth:</strong>
      <%= @user.date_of_birth&.strftime("%d/%m/%Y") %>
    </p>

    <p>
      <strong>Expiry Date </strong>
      <%= @user.expiry_date&.strftime("%d/%m/%Y") %>
    </p>

    <p>
      <strong>Nationality:</strong>
      <%= @user.nationality %>
    </p>

    <p>
      <strong>Profession:</strong>
      <%= @user.profession %>
    </p>

    <p>
      <strong>Marital status:</strong>
      <%= @user.marital_status %>
    </p>

    <p>
      <strong>Spouse full name:</strong>
      <%= @user.spouse %>
    </p>

    <p>
      <strong>Home Address:</strong>
      <%= @user.home_address %>
    </p>

    <p>
      <strong>Currency:</strong>
      <%= @user.currency %>
    </p>
    <p>
      <strong>Mortgage application:</strong>
      <%= @user.needs_mortgage %>
    </p>

    <p>
      <strong>Holiday Let:</strong>
      <%= @user.wants_to_holiday_let %>
    </p>

    <p>
      <strong>In Lanzarote until:</strong>
      <%= @user.here_till&.strftime("%d/%m/%Y") %>
    </p>
</div>

<div class="card p-5 mb-5 card-shadow">
  <h4 class="mb-3">Power of Attorney</h4>
    <p>
      <strong>Power of Attorney:</strong>
      <%= @user.needs_poa %>
    </p>

    <p>
      <strong>PoA made in Spain:</strong>
      <%= @user.poa_made_in_spain %>
    </p>

    <p>
      <strong>PoA For:</strong>
      <%= @user.poa_for %>
    </p>
</div>

 <div class="card p-5 mb-5 card-shadow">
    <h4 class="mb-3">NIE</h4>
    <p>
      <strong>NIE Number:</strong>
      <%= @user.nie_number %>
    </p>


    <p>
      <strong>Father's first name:</strong>
      <%= @user.father_s_first_name %>
    </p>

    <p>
      <strong>Mother's first name:</strong>
      <%= @user.mother_s_first_name %>
    </p>
  </div>
<div class="card p-5 mb-5 card-shadow">
<h4 class="mb-3">Bank details</h4>
    <p>
      <strong>Reservation origin bank:</strong>
      <%= @user.r_origin_bank_details %>
    </p>

    <p>
      <strong>Private Contract origin bank:</strong>
      <%= @user.otb_origin_bank_details %>
    </p>

    <p>
      <strong>Balance origin bank:</strong>
      <%= @user.balance_bank_details %>
    </p>

    <p>
      <strong>Do you have a Spanish Bank account:</strong>
      <%= @user.has_a_spanish_bank_account %>
    </p>

    <p>
      <strong>Utilities standing orders bank:</strong>
      <%= @user.standing_orders_bank_details %>
    </p>
</div>
    <%# will  %>
    <div class="card p-5 mb-5 card-shadow">
<h4 class="mb-3">Last Will & Testament</h4>

    <p>
      <strong>Name of the present spouse:</strong>
      <%= @user.name_of_the_present_spouse %>
    </p>

    <p>
      <strong>Name of the previous spouses:</strong>
      <%= @user.name_of_the_previous_spouses %>
    </p>

    <p>
      <strong>Date of divorce:</strong>
      <%= @user.date_of_divorce&.strftime("%d/%m/%Y") %>
    </p>

    <p>
      <strong>Date of decease:</strong>
      <%= @user.date_of_decease&.strftime("%d/%m/%Y") %>
    </p>

    <p>
      <strong>Father's full name:</strong>
      <%= @user.father_s_full_name %>
    </p>

    <p>
      <strong>Father's vital status:</strong>
      <%= @user.father_s_vital_status %>
    </p>

    <p>
      <strong>Mother's vital status:</strong>
      <%= @user.mother_s_vital_status %>
    </p>

    <p>
      <strong>Mother's full name:</strong>
      <%= @user.mother_s_full_name %>
    </p>

    <p>
      <strong>Children:</strong>
      <%= @user.children %>
    </p>

    <p>
      <strong>Outline of Bequests and Order of Success:</strong>
      <%= @user.outline_of_bequests_and_oder_of_success %>
    </p>

    <p>
      <strong>Inheritance to be governed by:</strong>
      <%= @user.inheritance_to_be_governed_by %>
    </p>




    </div>

    <%# uploaded docuemnts section  %>

      <div class="card p-5 mb-3 card-shadow">
          <h4 class="mb-3">Uploaded documents</h4>

            <div class="mb-4">
              <% if @user.nie_document.attached? %>
                  <h5 class="mt-3">NIE document</h5>
                  <div class="mb-3">
                    <%= image_tag @user.nie_document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                  </div>
              <% end %>
            </div>

            <div class="mb-4">
              <% if @user.passport_document.attached? %>
                <h5 class="mt-3">Passport</h5>
                <div class="mb-3">
                  <%= image_tag @user.passport_document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                </div>
              <% end %>
            </div>

            <% if @user.nota_simple_documents.attached? || 
                  @user.title_deed_documents.attached? ||
                  @user.vv_license_documents.attached? ||
                  @user.first_occupation_license_documents.attached? ||
                  @user.cee_documents.attached? ||
                  @user.civil_liability_insurance_policy_documents.attached? ||
                  @user.igic_registration_modelo_400_document.attached? %>
              
              <h5 class="mt-4 mb-3">VV License related documents</h5>
              
              <% if @user.nota_simple_documents.attached? %>
                <p><strong>Nota Simple:</strong></p>
                <div class="row mb-4">
                  <% @user.nota_simple_documents.each do |document| %>
                    <div class="col-md-4 mb-3">
                      <%= image_tag document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @user.title_deed_documents.attached? %>
                <p><strong>Title Deed (Escritura):</strong></p>
                <div class="row mb-4">
                  <% @user.title_deed_documents.each do |document| %>
                    <div class="col-md-4 mb-3">
                      <%= image_tag document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @user.vv_license_documents.attached? %>
                <p><strong>VV License:</strong></p>
                <div class="row mb-4">
                  <% @user.vv_license_documents.each do |document| %>
                    <div class="col-md-4 mb-3">
                      <%= image_tag document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @user.first_occupation_license_documents.attached? %>
                <p><strong>First Occupation License:</strong></p>
                <div class="row mb-4">
                  <% @user.first_occupation_license_documents.each do |document| %>
                    <div class="col-md-4 mb-3">
                      <%= image_tag document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @user.cee_documents.attached? %>
                <p><strong>Energy Efficiency Certificate (CEE):</strong></p>
                <div class="row mb-4">
                  <% @user.cee_documents.each do |document| %>
                    <div class="col-md-4 mb-3">
                      <%= image_tag document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @user.civil_liability_insurance_policy_documents.attached? %>
                <p><strong>Civil Liability Insurance Policy:</strong></p>
                <div class="row mb-4">
                  <% @user.civil_liability_insurance_policy_documents.each do |document| %>
                    <div class="col-md-4 mb-3">
                      <%= image_tag document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                    </div>
                  <% end %>
                </div>
              <% end %>

              <% if @user.igic_registration_modelo_400_document.attached? %>
                <p><strong>IGIC Registration (Modelo 400):</strong></p>
                <div class="mb-4">
                  <%= image_tag @user.igic_registration_modelo_400_document, class: "img-fluid img-thumbnail", style: "max-width: 200px; max-height: 200px; object-fit: contain;" %>
                </div>
              <% end %>
            <% end %>
      </div>

    <div class="row justify-content-center" >
        <%= link_to 'Edit' , edit_user_path(@user),  class:"btn btn-primary btn-lg col-4 m-1"%>
        <%= link_to "Logout", destroy_user_session_path, class:"btn btn-outline-primary btn-lg col-4 m-1", method: :delete %>
    </div>

    <p class="mt-5 mb-3 text-muted text-center">Roper Lawyers &copy; 2010-<%= Date.today.year %></p>
  </div>
</div>
